<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.admaja.mofin.ui.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.admaja.mofin.ui.fragment.MovieFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movie"/>

    <fragment
        android:id="@+id/navigation_tv"
        android:name="com.admaja.mofin.ui.fragment.TvFragment"
        android:label="@string/title_tv_shows"
        tools:layout="@layout/fragment_tv"/>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.admaja.mofin.ui.fragment.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite"/>

</navigation>